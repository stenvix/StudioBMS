@model ForgotPasswordViewModel
@inject IHtmlLocalizer<ModelResource> ModelLocalizer
@{
    Layout = "Forms/BaseForm";
    ViewData["FormClass"] = "authorize-panel";
}

<form asp-controller="Account" asp-action="ForgotPassword" data-ajax="true" data-ajax-method="post" data-method="replace" data-ajax-update="#recovery">
    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
    <div class="form-group">
        <input asp-for="Email" class="form-control" placeholder="@ModelLocalizer["EMail"]"/>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div class="col-xs-6 col-xs-offset-3">
            <button type="submit" class="btn btn-block btn-primary btn-lg">@ModelLocalizer["Confirm"]</button>
        </div>
    </div>
</form>