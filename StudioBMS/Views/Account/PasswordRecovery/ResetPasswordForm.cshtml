@model ResetPasswordViewModel
@inject IHtmlLocalizer<ModelResource> ModelLocalizer
@{
    Layout = "Forms/BaseForm";
    ViewData["FormClass"] = "authorize-panel";
}
<form asp-controller="Account" asp-action="ResetPassword" method="post" data-ajax="true" data-ajax-method="post" data-method="replace" data-ajax-update="#recovery">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input asp-for="Code" type="hidden" />
    <div class="form-group">
            <input asp-for="Email" class="form-control" placeholder="@ModelLocalizer["EMail"]"/>
            <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
            <input asp-for="Password" class="form-control" placeholder="@ModelLocalizer["Password"]"/>
            <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group">
            <input asp-for="ConfirmPassword" class="form-control" placeholder="@ModelLocalizer["ConfirmPassword"]" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div class="col-xs-6 col-xs-offset-3">
            <button type="submit" class="btn btn-block btn-primary btn-lg">@ModelLocalizer["Confirm"]</button>
        </div>
    </div>
</form>