@using StudioBMS.Business.Managers.Identity
@inject PersonModelSignInManager SignInManager
@inject PersonModelManager UserManager
@inject IHtmlLocalizer<PageTitleResource> TitleLocalizer

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-area="Settings" asp-controller="AccountSettings" asp-action="Index">@TitleLocalizer["Settings"]</a>
            </li>
            <li>
                <a href="#" onclick="document.getElementById('logoutForm').submit();">@TitleLocalizer["LogOut"]</a>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>
            <a asp-area="" asp-controller="Account" asp-action="Register">@TitleLocalizer["Registration"]</a>
        </li>
        <li>
            <a asp-area="" asp-controller="Account" asp-action="Login">@TitleLocalizer["LogIn"]</a>
        </li>
    </ul>
}