@model WorkshopModel
@inject IHtmlLocalizer<ModelResource> ModelLocalizer

<input type="hidden" asp-for="Id"/>
<div class="form-group">
    <label>@ModelLocalizer[nameof(Model.Title)]</label>
    <input asp-for="Title" class="form-control" />
</div>
<div class="form-group">
    <label>@ModelLocalizer[nameof(Model.City)]</label>
    <input asp-for="City" class="form-control" />
</div>
<div class="form-group">
    <label>@ModelLocalizer[nameof(Model.Address)]</label>
    <input asp-for="Address" class="form-control" />
</div>
<div class="form-group">
    <label>@ModelLocalizer["Phone"]</label>
    <input asp-for="PhoneNumber" class="form-control" />
</div>
<div class="form-group">
    <label>@ModelLocalizer["EMail"]</label>
    <input asp-for="Email" class="form-control" />
</div>
<div class="form-group row">
    <button type="submit" class="col-md-6 col-md-offset-3 btn btn-primary">@ModelLocalizer["Confirm"]</button>
</div>