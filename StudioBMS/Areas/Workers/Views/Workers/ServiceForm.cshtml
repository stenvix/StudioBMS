@model ServiceModel
@{
    var services = ViewData["Services"] as IList<ServiceModel> ?? new List<ServiceModel>();
    var locale = CultureInfo.CurrentCulture.Name;
}
<form class="row" asp-area="Workers" asp-controller="Workers" asp-action="ServiceSubmit" method="post" asp-route-workerId="@ViewData["workerId"]">
    <div class="form-group col-md-11">
        <select name="serviceId" class="chosen">
            @foreach (var service in services)
            {
                <option value="@service.Id">
                    @if (locale == "en")
                    {
                        @service.EnTitle
                    }
                    @if (locale == "ru")
                    {
                        @service.RuTitle
                    }
                    @if (locale == "uk")
                    {
                        @service.UkTitle
                    }
                </option>
            }
        </select>
      
    </div>
    <div class="form-group col-md-1">
        <button type="submit" class="btn btn-primary">
            <i class="fa fa-plus"></i>
        </button>
    </div>
</form>